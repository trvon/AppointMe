<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:elevation="5dp"
    android:background="@drawable/myrect"
    style="@style/CustomDeck"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/rsz_rachel"
        android:layout_gravity="center"
        android:id="@+id/rsz_rachel" />

    <TextView
        android:text="Woodward"
        style="@style/TextStyle"
        android:id="@+id/textPersonName"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:textStyle="normal|bold" />

    <TextView

        android:id="@+id/textPersonLocation"
        android:text="235"
        style="@style/TextStyle"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hours"
        android:fontFamily="casual"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <Button
        android:text="Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/avail"
        android:layout_below="@+id/textPersonLocation"
        android:layout_centerHorizontal="true" />

</LinearLayout>